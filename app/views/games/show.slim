#notice = notice
- if @game.insufficient_funds?
  h3 Закончились деньги!
div Счет: #{@game.player.balance}
div Ставка: #{@game.player.bet}
- if @game.started? or @game.round_finished?
  - @game.dealer.hands.each do |hand|
    h5 Дилер
    = render 'hand', :hand => hand, :game => @game, :dealer => true
  - @game.player.hands.each do |hand|
    h5 Игрок
    = render 'hand', :hand => hand, :game => @game, :dealer => false
    - if hand.playing?
      div
        = button_to 'Hit', :action => :hand_action, :type => 'hit!', :hand_id => hand._id
        = button_to 'Stand', :action => :hand_action, :type => 'stand!', :hand_id => hand._id
        = button_to 'Double', :action => :hand_action, :type => 'double!', :hand_id => hand._id
        - if hand.can_split?
          = button_to 'Split', :action => :hand_action, :type => 'split!', :hand_id => hand._id
- if @game.player.betting?
  = form_tag url_for(:action => :bet)
    = text_field_tag :bet, @game.player.bet
    = submit_tag 'Принять ставку'

= button_to 'Начать заново', :action => :create
